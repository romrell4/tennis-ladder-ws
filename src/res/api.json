{
	"swagger": "2.0",
	"info": {
		"title": "Tennis Ladder API",
		"version": "v1"
	},
	"paths": {
		"/users": {
			"post": {
				"summary": "Either logs in or registers a user",
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "User",
						"schema": {
							"$ref": "#/definitions/user"
						}
					}
				}
			}
		},
		"/ladders": {
			"get": {
				"summary": "Get all active ladders",
				"produces": [
					"application/json"
				],
				"responses": {
					"200": {
						"description": "Ladders",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/ladder"
							}
						}
					}
				}
			}
		},
		"/ladders/{ladder_id}/players": {
			"get": {
				"summary": "Get all players in a ladder",
				"produces": [
					"application/json"
				],
				"parameters": [
					{
						"name": "ladder_id",
						"in": "path",
						"required": true,
						"type": "integer"
					}
				],
				"responses": {
					"200": {
						"description": "Players",
						"schema": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/player"
							}
						}
					}
				}
			}
		},
		"/ladders/{ladder_id}/players/{user_id}": {
			"post": {
				"summary": "Place a player in a ladder",
				"produces": [
					"application/json"
				],
				"parameters": [
					{
						"name": "ladder_id",
						"in": "path",
						"required": true,
						"type": "integer"
					},
					{
						"name": "user_id",
						"in": "path",
						"required": true,
						"type": "integer"
					}
				]
			}
		}
	},
	"definitions": {
		"user": {
			"properties": {
				"user_id": {
					"type": "integer"
				},
				"name": {
					"type": "string"
				}
			}
		},
		"ladder": {
			"properties": {
				"ladder_id": {
					"type": "integer"
				},
				"name": {
					"type": "string"
				},
				"start_date": {
					"type": "string",
					"format": "date"
				},
				"end_date": {
					"type": "string",
					"format": "date"
				}
			}
		},
		"player": {
			"properties": {
				"user_id": {
					"type": "integer"
				},
				"ladder_id": {
					"type": "integer"
				},
				"name": {
					"type": "string"
				},
				"score": {
					"type": "integer"
				}
			}
		}
	}
}